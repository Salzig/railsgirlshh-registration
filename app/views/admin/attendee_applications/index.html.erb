<h1>Attendee Applications</h1>
<h2><%= @event.title %></h2>
<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Female</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @attendee_applications.each do |attendee_application| %>
      <tr>
        <td><%= attendee_application.first_name %></td>
        <td><%= attendee_application.last_name %></td>
        <td><%= attendee_application.email %></td>
        <td><%= attendee_application.female %></td>
        <td><%= link_to 'Show', [:admin, @event, attendee_application] %></td>
        <td><%= link_to 'Edit', edit_admin_event_attendee_application_path(@event, attendee_application) %></td>
        <td><%= link_to 'Destroy', [:admin, @event, attendee_application], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Attendee application', new_event_attendee_application_path %>
