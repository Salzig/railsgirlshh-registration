<% content_for :title do %>
  Rails Girls Hamburg - Upcoming Events
<% end %>

<h1 class="text-center">Upcoming Events</h1>
<div class="row">
  <div class="large-12 large-centered columns">
    <% @events.reject{|e| e.is_over?}.each do |event| %>
    <h2><%= event.title %></h2>
    <p>Date: <%= event.event_date.to_s(:long) %></p>
    <% if event.description.present? %>
    <p><%= event.description %></p>
    <% end %>
    <h3>Attendee Registration</h3>
    <p><%= attendee_registration_display(event) %></p>
    <h3>Coach Registration</h3>
    <p><%= coach_registration_display(event) %></p>
    <% end %>
    <hr>
  </div>
</div
